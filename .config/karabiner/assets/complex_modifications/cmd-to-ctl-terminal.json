{
  "title": "Control Key Rebinding for Terminal Emulators",
  "rules": [
    {
      "description": "Command to Control in terminal apps",
      "manipulators": [
        {
          "description": "C-c",
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.apple\\.Terminal$",
                "^org\\.vim\\.MacVim$",
                "^io\\.alacritty$",
                "^com\\.neovide\\.neovide$",
                "^com\\.jetbrains\\.intellij\\.ce$"
              ]
            }
          ],
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": ["left_control"]
            }
          ]
        },
