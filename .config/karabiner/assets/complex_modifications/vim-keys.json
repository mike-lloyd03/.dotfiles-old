{
  "title": "CAPS_LOCK vim navigation, ESC if CAPS_LOCK pressed alone",
  "rules": [
    {
      "description": "vim navigation with CAPS_LOCK",
      "manipulators": [
        {
          "description": "j to down_arrow",
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock_pressed",
              "value": 1
            }
          ]
        },
        {
          "description": "k to up_arrow",
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock_pressed",
              "value": 1
            }
          ]
        },
        {
          "description": "h to left_arrow",
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock_pressed",
              "value": 1
            }
          ]
        },
        {
          "description": "l to right_arrow",
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock_pressed",
              "value": 1
            }
          ]
        },
        {
          "description": "set caps_lock_pressed variable",
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "caps_lock_pressed",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "caps_lock_pressed",
                "value": 0
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        },
        {
          "description": "0 to home in terminal",
          "type": "basic",
          "from": {
            "key_code": "0",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "home"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock_pressed",
              "value": 1
            },
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.apple\\.terminal$",
                "^org\\.vim\\.macvim$"
              ]
            }
          ]
        },
        {
          "description": "4 to end in terminal",
          "type": "basic",
          "from": {
            "key_code": "4",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "end"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock_pressed",
              "value": 1
            },
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.apple\\.terminal$",
                "^org\\.vim\\.macvim$"
              ]
            }
          ]
        },
        {
          "description": "0 to cmd + left_arrow outside terminal",
          "type": "basic",
          "from": {
            "key_code": "0",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": "command"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock_pressed",
              "value": 1
            },
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.apple\\.terminal$",
                "^org\\.vim\\.macvim$"
              ]
            }
          ]
        },
        {
          "description": "4 to cmd + right_arrow outside terminal",
          "type": "basic",
          "from": {
            "key_code": "4",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": "command"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock_pressed",
              "value": 1
            },
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.apple\\.terminal$",
                "^org\\.vim\\.macvim$"
              ]
            }
          ]
        },
        {
          "description": "d to cut",
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "x",
              "modifiers": "right_command"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock_pressed",
              "value": 1
            }
          ]
        },
        {
          "description": "y to copy",
          "type": "basic",
          "from": {
            "key_code": "y",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": "right_command"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock_pressed",
              "value": 1
            }
          ]
        },
        {
          "description": "p to paste",
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": "right_command"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock_pressed",
              "value": 1
            }
          ]
        },
        {
          "description": "gg to top of document",
          "type": "basic",
          "from": {
            "key_code": "g"
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": "right_command"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock_pressed",
              "value": 1
            }
          ]
        },
        {
          "description": "g to bottom of document",
          "type": "basic",
          "from": {
            "key_code": "g",
            "modifiers": "left_shift"
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": "right_command"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock_pressed",
              "value": 1
            }
          ]
        },
        {
          "description": "u to undo",
          "type": "basic",
          "from": {
            "key_code": "u"
          },
          "to": [
            {
              "key_code": "z",
              "modifiers": "command"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock_pressed",
              "value": 1
            }
          ]
        },
        {
          "description": "r to redo",
          "type": "basic",
          "from": {
            "key_code": "r"
          },
          "to": [
            {
              "key_code": "z",
              "modifiers": ["command", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock_pressed",
              "value": 1
            }
          ]
        }
      ]
    },
    {
      "description": "Toggle CAPS_LOCK with LEFT_SHIFT + RIGHT_SHIFT",
      "manipulators": [
        {
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "mandatory": ["right_shift"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "left_shift"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "mandatory": ["left_shift"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "right_shift"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
